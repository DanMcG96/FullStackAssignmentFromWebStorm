<div class="signup-form">
    <div class="signup-icon" style="margin-bottom: 20px">
        <i style="font-size: 100px; color: green; margin-top: 30px" class="fas fa-user-plus"></i></h1>
    </div>
    <form action="/register" method="POST">
        <div class="field">
            <label class="label" style="font-size: x-large">First Name</label>
            <div class="control">
                <input class="input" type="text" placeholder="First Name" name="firstName">
            </div>
        </div>

        <div class="field">
            <label class="label" style="font-size: x-large">Last Name</label>
            <div class="control">
                <input class="input" type="text" placeholder="Last Name" name="lastName">
            </div>
        </div>

        <div class="field">
            <label class="label" style="font-size: x-large">Email</label>
            <div class="control">
                <input class="input" type="text" placeholder="Email" name="email">
            </div>
        </div>

        <div class="field">
            <label class="label" style="font-size: x-large">Password</label>
            <div class="control">
                <input class="input" type="text" placeholder="Password" name="password">
            </div>
        </div>
        <div class="field is-grouped">
            <button class="button is-link" style="margin-top: 20px; font-size: large">Submit</button>
        </div>
    </form>

    <h1 style=" margin-top: 30px; font-size: xx-large; font-weight: bold; font-style: italic">Thank You for joining Ireland's Oghams</h1>
</div>



